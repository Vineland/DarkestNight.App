<?xml version="1.0" encoding="UTF-8"?>
<ui:ContentPageBase xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
x:Class="Vineland.Necromancer.UI.ChooseHeroes"
xmlns:ui="clr-namespace:Vineland.Necromancer.UI"
x:TypeArguments="ui:ChooseHeroesViewModel"
xmlns:core="clr-namespace:Vineland.DarkestNight.Core"
>
<ContentPage.ToolbarItems>
      <ToolbarItem Name="Start Game" Command="{Binding StartGame}" ></ToolbarItem>
</ContentPage.ToolbarItems>
	<ui:MultiSelectListView 
	x:TypeArguments="core:Hero"
	x:Name="HeroesListView" 
	ItemsSource="{Binding Heroes}" 
	SelectedItems="{Binding SelectedHeroes}" />
</ui:ContentPageBase>
