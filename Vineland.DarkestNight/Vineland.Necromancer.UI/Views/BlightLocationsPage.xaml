<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
x:Class="Vineland.Necromancer.UI.BlightLocationsPage" 
xmlns:ui="clr-namespace:Vineland.Necromancer.UI" 
Padding="20, 60, 20, 0">
	<StackLayout>
		<Image Source="darkness.png" />
		<ui:CustomStepper Value="{Binding Darkness}" HorizontalOptions="Center" />
		<ListView ItemsSource="{Binding Locations}" >
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<StackLayout Orientation="Horizontal">
							<Label Text="{Binding Name}" VerticalOptions="Center" HorizontalOptions="StartAndExpand"/>
							<ui:CustomStepper Value="{Binding NumberOfBlights}" VerticalOptions="Center" HorizontalOptions="End" Maximum="4"/>
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackLayout>
</ContentPage>