<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
x:Class="Vineland.Necromancer.UI.BlightLocationsPage" 
xmlns:ui="clr-namespace:Vineland.Necromancer.UI" 
Padding="20, 60, 20, 0"> 
	<StackLayout>
		<ListView ItemsSource="{Binding Locations}"  >
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<AbsoluteLayout>
							<Label Text="{Binding Name}" VerticalOptions="Center" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0,0,AutoSize, AutoSize"/>
							<ui:CustomStepper Value="{Binding NumberOfBlights}" VerticalOptions="Center" Maximum="4" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="1,0,AutoSize, AutoSize"/>
						</AbsoluteLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackLayout>
</ContentPage>